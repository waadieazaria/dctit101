#include <iostream>

using namespace std;

int main()
{
    float  base ;
    float  height ;
    float  area ;
    cout<< "THE BASE OF THE TRIANGLE IS ";
    cin>>  base;
    cout<< "THE HEIGHT OF THE TRIANGLE IS ";
    cin>>  height;
    area   = 0.5 * base * height;
    cout<< "THE AREA OF THE TRIANGLE IS "<<area<<" squared units";
    return 0;
}
